<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- BUTTON -->
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape>
                    <solid android:color="@color/colorAccent" />
                    <corners android:radius="@dimen/button_drawable_radius" />
                    <stroke android:width="1dp" android:color="@android:color/white" android:dashGap="5px" android:dashWidth="5px" />
                    <padding android:bottom="@dimen/button_top_bottom_padding" android:left="@dimen/button_left_right_padding" android:right="@dimen/button_left_right_padding" android:top="@dimen/button_top_bottom_padding" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>