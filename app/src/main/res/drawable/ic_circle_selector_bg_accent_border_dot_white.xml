<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false">
        <layer-list>

            <!-- BUTTON -->
            <item android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp">
                <shape android:innerRadius="0dp" android:shape="ring" android:thicknessRatio="2" android:useLevel="false">
                    <stroke android:width="1dp" android:color="@android:color/white" android:dashGap="5px" android:dashWidth="5px" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_selected="true">
        <layer-list>
            <!-- BUTTON -->
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape android:innerRadius="0dp" android:shape="ring" android:thicknessRatio="2" android:useLevel="false">
                    <stroke android:width="1dp" android:color="@android:color/white" android:dashGap="5px" android:dashWidth="5px" />
                    <solid android:color="@color/colorAccent" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>