<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ParentEditTextStyle">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
    </style>

    <style name="NameEditTextStyle" parent="ParentEditTextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/view_element_margin</item>
        <item name="android:background">@drawable/bg_color_white_rounded_corners_accent_dot_border
        </item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/textview_name</item>
        <item name="android:imeOptions">actionNext|flagNoFullscreen</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textSize">@dimen/text_size_edittext_field</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLength">25</item>
    </style>

    android:nextFocusForward="@id/phone_edittext"
</resources>
